{
    "name": "@revertdotdev/backend",
    "version": "1.0.0",
    "description": "Codebase to run revert-backend",
    "private": true,
    "scripts": {
        "build": "mkdir -p ./dist/generated && cp -r ./generated/ ./dist/generated && tsc",
        "watch": "tsc -w",
        "start": "NODE_ENV=production node ./dist/index.js",
        "start:prod": "yarn db-deploy && NODE_ENV=production node ./dist/index.js",
        "start:dev": "NODE_ENV=development ts-node-dev --respawn index.ts",
        "test": "jest --config=jest.config.json",
        "dev": "NODE_ENV=development ts-node-dev --respawn index.ts",
        "db-deploy": "prisma migrate deploy",
        "db-seed": "prisma db seed",
        "db-pull": "prisma db pull",
        "migration:resolve": "prisma migrate resolve --applied $MIGRATION_ID",
        "migration:dev": "prisma migrate dev",
        "migration:rollback": "prisma migrate resolve --rolled-back $MIGRATION_ID",
        "studio": "prisma studio",
        "migration:dryRun": "prisma migrate dev --create-only --name %1",
        "migration:generate": "prisma migrate dev --name %1"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "author": {
        "name": "Jatin Sandilya",
        "url": "https://twitter.com/revertdotdev",
        "organization": true
    },
    "devDependencies": {
        "@babel/core": "^7.22.11",
        "@babel/plugin-transform-modules-commonjs": "^7.19.6",
        "@babel/preset-env": "^7.19.4",
        "@babel/preset-typescript": "^7.18.6",
        "@types/bull": "^3.15.9",
        "@types/cors": "^2.8.14",
        "@types/jest": "^29.5.4",
        "@types/lodash": "^4.14.199",
        "@types/morgan": "^1.9.5",
        "@types/node": "*",
        "@types/node-cron": "^3.0.8",
        "@types/uuid": "^9.0.2",
        "babel-jest": "^29.2.2",
        "concurrently": "^8.2.1",
        "eslint-plugin-deprecation": "^1.3.2",
        "fern-api": "^0.0.184",
        "jest": "^29.6.4",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "@prisma/client": "^4.16.0",
        "@sentry/node": "^7.55.2",
        "@shortloop/node": "0.0.10",
        "@types/express": "^4.17.13",
        "axios": "^1.6.8",
        "better-sse": "^0.9.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.1",
        "express-rate-limit": "^6.7.0",
        "lodash": "^4.17.21",
        "morgan": "^1.10.0",
        "node-cron": "^3.0.2",
        "prisma": "^4.16.0",
        "redis": "^4.6.8",
        "svix": "^1.8.0",
        "winston": "^3.10.0"
    }
}
